{{>layout/header}}
<h1>Dongeun Blog Hello~ World!</h1>
<div class="post-list">
All Posts:
    {{#posts}}
        <div class="post">
            <p class="each-post">
                Id: {{id}}<br/>
                <span>Title: </span><a href="/post/{{id}}">{{title}}</a><br/>
                Post: {{post}}<br/>
                Created: {{createdAt}}<br/>
                Last modified: {{modifiedAt}}<br/>
            </p>
        </div>
    {{/posts}}
</div>
<div>
    <form class="form-save">
        <div>
            <label for="save-title">Title:</label>
            <input id="save-title" type="text" />
        </div>
        <div>
            <label for="save-post">Post:</label>
            <textarea id="save-post"></textarea>
        </div>
        <div class="btn-save-group">
            <a id="btn-save-cancel" href="/">Cancel</a>
            <button id="btn-save">Submit</button>
        </div>
    </form>
</div>
{{>layout/footer}}
